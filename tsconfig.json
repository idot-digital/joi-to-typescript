{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "src",
    "moduleResolution": "node16"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "examples"]
}
